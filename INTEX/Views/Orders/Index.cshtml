@model IEnumerable<INTEX.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Orders</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CustName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ORDERCOMMENTS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ORDERPROGRESS)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
